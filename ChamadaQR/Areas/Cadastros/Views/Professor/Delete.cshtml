@model Modelo.Cadastros.Professor
@{
    Layout = "_LayoutIES";
}

@section styles {
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
}

    <div class="card-block">
        <div class="card-header text-white bg-secondary text-center h1">Exibindo um Professor para remoção</div>
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-key" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Matricula" class="form-control" disabled="disabled" />
                </div>
                <label asp-for="ProfessorNome" class="control-label"></label>
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                    </span>
                    <input asp-for="ProfessorNome" class="form-control" disabled="disabled" />
                </div>
                <label asp-for="Projeto.ProjetoNome" class="control-label"></label>
                <br />
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-area-chart" aria-hidden="true"></i>
                    </span>
                    <input asp-for="Projeto.ProjetoNome" class="form-control" disabled="disabled" />
                </div>
            </div>
        </div>
        <div class="card-footer bg-info text-center text-white">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ProfessorID" />
                <input type="submit" value="Remover Professor" class="btn btn-light" />
                <a asp-action="Index" class="btn btn-info">Retornar à listagem de Professores</a>
            </form>
        </div>


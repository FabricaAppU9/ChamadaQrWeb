@model Modelo.Cadastros.Unidade
@{
    Layout = "_LayoutIES";
}

@section styles {
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
}

<div class="card-block">
    <div class="card-header text-white bg-secondary text-center h1">Exibindo uma unidade existente</div>
    <div class="card-body">
        <div class="row">
            <div class="col-9">
                <div class="form-group">
                    <label asp-for="UnidadeID" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-key" aria-hidden="true"></i>
                        </span>
                        <input asp-for="UnidadeID" class="form-control" disabled="disabled" />
                    </div>

                    <label asp-for="Alias" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-location-arrow " aria-hidden="true"></i>
                        </span>
                        <input asp-for="Alias" class="form-control" disabled="disabled" />
                    </div>

                    <label asp-for="UnidadeNome" class="control-label"></label>
                    <br />
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="fa fa-address-card-o" aria-hidden="true"></i>
                        </span>
                        <input asp-for="UnidadeNome" class="form-control" disabled="disabled" />
                    </div>
                </div>
            </div>
            <div class="col-3">
                @*@Html.Partial("~/Views/Projeto/_ComAlunos.cshtml", Modelo.Cadastros.Projeto.Alunos.ToList())*@
            </div>
        </div>
    </div>
    <div class="card-footer bg-info text-center text-white">
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.UnidadeID">Alterar</a> |
        <a asp-action="Index" class="btn btn-warning">Retornar à listagem de unidades</a>
    </div>
</div>
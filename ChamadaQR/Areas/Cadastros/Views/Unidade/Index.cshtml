@model IEnumerable<Modelo.Cadastros.Unidade>
@{
    Layout = "_LayoutIES";
}

@section styles {
    @*    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css"/>*@
    <link rel="stylesheet" href="~/lib/datatables/media/css/jquery.dataTables.min.css" />
}

@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}

<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">Unidades Cadastradas</div>
    <div class="card-body">
        <table id="tabela_unidades">
            <thead>
                <tr>
                    @*<th>
            @Html.DisplayNameFor(model => model.ProjetoID)
        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Alias)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnidadeNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    @*<td>
            @Html.DisplayFor(modelItem => item.ProjetoID)
        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Alias)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadeNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.UnidadeID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.UnidadeID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.UnidadeID">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">Cadastrar uma nova unidade</a>
    </div>
</div>


@section ScriptPage {
    @*    <script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.15/datatables.min.js"></script>*@
    <script type="text/javascript" src="~/lib/datatables/media/js/jquery.dataTables.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#tabela_unidades').DataTable({
                "order": [[1, "asc"]]
            });
        });
    </script>
}
